<h1>Edit Landlord</h1>

<form id="editLandlordForm" action="/landlords/<%= landlord._id %>?_method=put" method="post">
    <label for="title">Title:</label>
    <select name="title" id="title">
        <option value="Mx" <%= landlord.title === 'Mx' ? 'selected' : '' %>>Mx</option>
        <option value="Ms" <%= landlord.title === 'Ms' ? 'selected' : '' %>>Ms</option>
        <option value="Mr" <%= landlord.title === 'Mr' ? 'selected' : '' %>>Mr</option>
        <option value="Mrs" <%= landlord.title === 'Mrs' ? 'selected' : '' %>>Mrs</option>
        <option value="Miss" <%= landlord.title === 'Miss' ? 'selected' : '' %>>Miss</option>
        <option value="Dr" <%= landlord.title === 'Dr' ? 'selected' : '' %>>Dr</option>
        <option value="Prof" <%= landlord.title === 'Prof' ? 'selected' : '' %>>Prof</option>
    </select><br><br>
    <label for="firstNames">First Names:</label>
    <input type="text" name="firstNames" id="firstNames" value="<%= landlord.firstNames %>"><br><br>
    <label for="surname">Surname:</label>
    <input type="text" name="surname" id="surname" value="<%= landlord.surname %>"><br><br>
    <label for="phoneNumber">Phone Number:</label>
    <input type="text" name="phoneNumber" id="phoneNumber" value="<%= landlord.phoneNumber %>"><br><br>
    <label for="emailAddress">Email Address:</label>
    <input type="email" name="emailAddress" id="emailAddress" value="<%= landlord.emailAddress %>"><br><br>
    <label for="addressLine1">Address Line 1:</label>
    <input type="text" name="homeAddress.addressLine1" id="addressLine1" value="<%= landlord.homeAddress.addressLine1 %>"><br><br>
    <label for="addressLine2">Address Line 2:</label>
    <input type="text" name="homeAddress.addressLine2" id="addressLine2" value="<%= landlord.homeAddress.addressLine2 %>"><br><br>
    <label for="town">Town:</label>
    <input type="text" name="homeAddress.town" id="town" value="<%= landlord.homeAddress.town %>"><br><br>
    <label for="county">County:</label>
    <input type="text" name="homeAddress.county" id="county" value="<%= landlord.homeAddress.county %>"><br><br>
    <label for="eircode">Eircode:</label>
    <input type="text" name="homeAddress.eircode" id="eircode" value="<%= landlord.homeAddress.eircode %>"><br><br>
    <label for="dateOfBirth">Date of Birth:</label>
    <input type="date" name="dateOfBirth" id="dateOfBirth" value="<%= landlord.dateOfBirth.toISOString().substr(0, 10) %>"><br><br>
    <label for="rentPermission">Rent Permission:</label>
    <select name="rentPermission" id="rentPermission">
        <option value="Y" <%= landlord.rentPermission === 'Y' ? 'selected' : '' %>>Yes</option>
        <option value="N" <%= landlord.rentPermission === 'N' ? 'selected' : '' %>>No</option>
    </select><br><br>
    <label for="tenantContactPermission">Tenant Contact Permission:</label>
    <select name="tenantContactPermission" id="tenantContactPermission">
        <option value="Y" <%= landlord.tenantContactPermission === 'Y' ? 'selected' : '' %>>Yes</option>
        <option value="N" <%= landlord.tenantContactPermission === 'N' ? 'selected' : '' %>>No</option>
    </select><br><br>
    <button type="submit">Update Landlord</button>
</form>

