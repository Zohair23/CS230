<h1>Edit Tenant</h1>

<form id="editTenantForm" action="/tenants/<%= tenant._id %>?_method=put" method="post">
    <label for="title">Title:</label>
    <select name="title" id="title">
        <option value="Mx" <%= tenant.title === 'Mx' ? 'selected' : '' %>>Mx</option>
        <option value="Ms" <%= tenant.title === 'Ms' ? 'selected' : '' %>>Ms</option>
        <option value="Mr" <%= tenant.title === 'Mr' ? 'selected' : '' %>>Mr</option>
        <option value="Mrs" <%= tenant.title === 'Mrs' ? 'selected' : '' %>>Mrs</option>
        <option value="Miss" <%= tenant.title === 'Miss' ? 'selected' : '' %>>Miss</option>
        <option value="Dr" <%= tenant.title === 'Dr' ? 'selected' : '' %>>Dr</option>
        <option value="Prof" <%= tenant.title === 'Prof' ? 'selected' : '' %>>Prof</option>
    </select><br><br>
    <label for="firstNames">First Names:</label>
    <input type="text" name="firstNames" id="firstNames" value="<%= tenant.firstNames %>"><br><br>
    <label for="surname">Surname:</label>
    <input type="text" name="surname" id="surname" value="<%= tenant.surname %>"><br><br>
    <label for="phoneNumber">Phone Number:</label>
    <input type="text" name="phoneNumber" id="phoneNumber" value="<%= tenant.phoneNumber %>"><br><br>
    <label for="emailAddress">Email Address:</label>
    <input type="email" name="emailAddress" id="emailAddress" value="<%= tenant.emailAddress %>"><br><br>
    <label for="addressLine1">Address Line 1:</label>
    <input type="text" name="homeAddress.addressLine1" id="addressLine1" value="<%= tenant.homeAddress.addressLine1 %>"><br><br>
    <label for="addressLine2">Address Line 2:</label>
    <input type="text" name="homeAddress.addressLine2" id="addressLine2" value="<%= tenant.homeAddress.addressLine2 %>"><br><br>
    <label for="town">Town:</label>
    <input type="text" name="homeAddress.town" id="town" value="<%= tenant.homeAddress.town %>"><br><br>
    <label for="county">County:</label>
    <input type="text" name="homeAddress.county" id="county" value="<%= tenant.homeAddress.county %>"><br><br>
    <label for="eircode">Eircode:</label>
    <input type="text" name="homeAddress.eircode" id="eircode" value="<%= tenant.homeAddress.eircode %>"><br><br>
    <button type="submit">Update Tenant</button>
</form>

